{
  "name": "bun-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "test": "bun test",
    "update-deps": "bunx npm-check-updates -u && bun install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@types/bun": "latest",
    "typescript": "5.8.3"
  }
}
