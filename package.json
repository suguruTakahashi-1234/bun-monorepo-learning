{
  "name": "bun-monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "deps:check": "bunx npm-check-updates",
    "deps:update": "bunx npm-check-updates -u && bun install",
    "check:dependencies": "bun run scripts/check-dependencies.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@types/bun": "latest",
    "turbo": "2.5.4",
    "typescript": "5.8.3"
  }
}
